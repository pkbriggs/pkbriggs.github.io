//- The name of the project, a short tagline/description, and then the three features numbers and their labels
mixin project_promo(name, tagline, num1, num1_label, num2, num2_label, num3, num3_label)
  .project_page_promo
    .vertical_center
      .container.promo_name_container.centered_text
        .project_promo_name= name
        .project_promo_sub_text= tagline
      .highlights_outer_container
        .container.highlights_container
          .col-md-4
            .project_highlight_number= num1
            .project_highlight_text= num1_label
          .col-md-4
            .project_highlight_number= num2
            .project_highlight_text= num2_label
          .col-md-4
            .project_highlight_number= num3
            .project_highlight_text= num3_label

mixin project_info(what_is_it, my_role)
  .subsection_header_row
    .container
      .row
        .col-md-5.subsection_header
          span.subsection_header_text What is it?
        .col-md-6.col-md-offset-1.subsection_header
          span.subsection_header_text My role
  .container
    .row
      .col-md-5= what_is_it
      .col-md-6.col-md-offset-1= my_role

mixin project_images(section_name)
  .subsection_header_row
    .container
      .row
        .col-md-12.subsection_header
          span.subsection_header_text= section_name
  .container.small_margin_top
    block

mixin full_width_project_image(image_classes)
  //- the label is passed in as a block
  //- the label_class should be passed in as attribute
  div(class!="#{image_classes} full_responsive_image")
  .row.large_margin_bottom
    .col-md-8.col-md-offset-2.centered_text(class!=attributes.label_class)
      block

mixin left_half_project_image(image_classes, label)
  //- the label is passed in as a block
  //- the label_class should be passed in as attribute
  .row.large_margin_bottom
    .col-md-6
      div(class!="#{image_classes} full_responsive_image")
    .col-md-6(class!=attributes.label_class)
      block

mixin right_half_project_image(image_classes)
  //- the label is passed in as a block
  //- the label_class should be passed in as attribute
  .row.large_margin_bottom
    .col-md-6(class!=attributes.label_class)
      block
    .col-md-6
      div(class!="#{image_classes} full_responsive_image")

mixin side_by_side_project_images(image1_classes, image1_label, image2_classes, image2_label)
  .row
    .col-md-6
      div(class!="#{image1_classes} full_responsive_image")
    .col-md-6
      div(class!="#{image2_classes} full_responsive_image")
  .row.large_margin_bottom
    .col-md-4.col-md-offset-1.centered_text= image1_label
    .col-md-4.col-md-offset-2.centered_text= image2_label
